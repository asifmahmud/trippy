@model IEnumerable<trippy.Models.Trip>

@{ 
    ViewBag.Title = "Trips Page";
}
@section Scripts{ 
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}


<div class="row" ng-app="app-trips">
    <div class="col-md-5">
        <h2>Trippy</h2>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control"/>
            </div>
            <div>
                <input type="submit" value="Add" class="btn btn-success"/>
            </div>
        </form>
        <br /><br />
        <div ng-controller="tripsController as vm">
            
            <div class="alert alert-dismissible alert-danger" ng-show="vm.errorMessage">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Error! </strong>
                {{vm.errorMessage}}
            </div>
            <div ng-show="vm.isBusy" class="text-center">
                <i class="fa fa-spinner fa-spin"></i> Loading...
            </div>

            <table class="table table-responsive table-striped table-hover">
                <tr>
                    <th>Trip</th>
                    <th>Date</th>
                    <th>Modify</th>
                </tr>
                <tr ng-repeat="trip in vm.trips">
                    <td>{{trip.name}}</td>
                    <td>{{trip.dateCreated | date}}</td>
                    <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="col-md-7">
        <h2>The Map</h2>
        <ul>
            @foreach (var item in Model)
            {
                <li>@item.Name</li>
            }
        </ul>
    </div>
</div>
