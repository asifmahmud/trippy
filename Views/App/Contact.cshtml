@model trippy.ViewModels.ContactViewModel

@{ 
    ViewBag.Title = "Contact Page";
}
@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 }


<div class="row">
    <div class="col-md-6">
        <h2>Contact Me</h2>
        @if (ViewBag.UserMessage != null)
        {
            <div>@ViewBag.UserMessage</div>

        }
        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message">Message</label>
                <textarea cols="20" rows="4" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-success"/>
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
            </div>

        </form>
    </div>
</div>