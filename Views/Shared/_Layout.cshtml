<!DOCTYPE html>
<html>
<head>
    <title>Trippy - @ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
</head>
<body>

    <div id="sidebar">
        <div id="user-info">
            @if (User.Identity.IsAuthenticated)
            {
                <img src="~/img/default_avatar_large.png" class="headshot" />
                <span id="username">@User.Identity.Name</span>
            }
        </div>
    </div>
    <div id="container">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-left" >
                    <li>
                        <a asp-controller="App" asp-action="Index" class="navbar-brand">
                            Trippy
                        </a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li> <a asp-controller="App" asp-action="About">About</a></li>
                    <li> <a asp-controller="App" asp-action="Contact">Contact</a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li> <a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="active">
                            <a asp-controller="Account" asp-action="SignUp" class="btn btn-block">
                                Sign Up
                            </a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li> <a asp-controller="App" asp-action="Trips">My Trips</a></li>
                        <li> <a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }

                </ul>
            </div>
        </nav> 
        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    @RenderSection("scripts", false)

</body>
</html>
