@model trippy.ViewModels.SignUpViewModel

@{
    ViewBag.Title = "Sign Up";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Sign Up</h2>
        <br />

        <form method="post" novalidate>

            <span asp-validation-summary="ValidationSummary.ModelOnly"></span>

            @if (ViewBag.signUpError != "")
            {
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <span>
                        <strong>Error:</strong><p>@ViewBag.signUpError</p>
                    </span>
                </div>
            }


            <div class="form-group">
                <label asp-for="SignupUsername">Username</label>
                <input asp-for="SignupUsername" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="SignupUsername" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="SignupEmail">Email</label>
                <input asp-for="SignupEmail" class="form-control" placeholder="Enter Email Address" />
                <span asp-validation-for="SignupEmail" class="text-warning"></span>
            </div>


            <div class="form-group">
                <label asp-for="SignupPassword">Password</label>
                <input type="password" asp-for="SignupPassword" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="SignupPassword" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create an Account" class="btn btn-success" />
            </div>
        </form><br />

            <p>Already have an account? <a asp-controller="Account" asp-action="Login">Log In!</a></p>
</div>
</div>